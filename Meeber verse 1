    <script>
        // --- Nifty Animations / Page Switching Logic ---

        // Get all navigation links and page sections
        const navItems = document.querySelectorAll('.nav-item');
        const pages = document.querySelectorAll('.page');
        const contentContainer = document.getElementById('content-container');

        // Function to handle page change
        function changePage(pageId) {
            // 1. Update Navigation Active State
            navItems.forEach(item => {
                if (item.dataset.page === pageId) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });

            // 2. Animate out and then in
            // Add an exit animation class before hiding
            contentContainer.classList.add('animate-out');

            // Wait for a brief moment to allow the animation to start (optional, but smoother)
            setTimeout(() => {
                // 3. Hide all pages
                pages.forEach(page => {
                    page.classList.add('hidden');
                    page.classList.remove('block');
                });

                // 4. Show the new page
                const newPage = document.getElementById(pageId + '-page');
                if (newPage) {
                    newPage.classList.remove('hidden');
                    newPage.classList.add('block');
                }

                // 5. Remove the exit animation and let the slideIn animation take over
                contentContainer.classList.remove('animate-out');
            }, 50); // Short delay for visual effect

            // Update URL hash for sharing/bookmarking
            window.location.hash = pageId;
        }

        // Event listener for navigation clicks
        navItems.forEach(item => {
            item.addEventListener('click', (e) => {
                const pageId = e.target.dataset.page;
                changePage(pageId);
            });
        });

        // Initial load based on URL hash
        window.addEventListener('load', () => {
            const hash = window.location.hash.substring(1); // Remove '#'
            if (hash && document.getElementById(hash + '-page')) {
                changePage(hash);
            } else {
                changePage('home'); // Default to home
            }
        });
    </script>
